// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(uuid())
  username             String    @unique
  email                String    @unique
  passwordHash         String    @map("password_hash")
  rol                  String    @default("operator") // 'admin', 'operator'
  createdAt            DateTime  @default(now()) @map("created_at")
  lastLogin            DateTime? @map("last_login")

  @@map("users")
}

model Client {
  id                   String         @id @default(uuid())
  name                 String         @map("nume")
  licensePlate         String         @unique @map("numar_inmatriculare")
  phoneNumber          String         @map("numar_telefon")
  email                String
  itpExpirationDate    DateTime       @map("data_expirare_itp")
  createdAt            DateTime       @default(now()) @map("created_at")
  updatedAt            DateTime       @updatedAt @map("updated_at")
  active               Boolean        @default(true) @map("activ")

  notifications        Notification[]

  @@index([itpExpirationDate])
  @@index([licensePlate])
  @@map("clients")
}

model Notification {
  id              String    @id @default(uuid())
  clientId        String    @map("client_id")
  type            String    @map("tip") // 'SMS' or 'EMAIL'
  status          String    // 'pending', 'sent', 'failed'
  message         String?   @db.Text @map("mesaj")
  sentAt          DateTime? @map("data_trimitere")
  error           String?   @db.Text @map("eroare")

  client          Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([status])
  @@map("notifications")
}
