# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/red_potato?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# Twilio SMS
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email (Nodemailer with SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your_email@gmail.com"
EMAIL_PASSWORD="your_app_password"
EMAIL_FROM="Service Auto <noreply@serviceauto.ro>"

# Optional: SendGrid (uncomment if using SendGrid)
# SENDGRID_API_KEY="your_sendgrid_api_key"

# Cronjob Settings
CRON_ENABLED=true
CRON_TIMEZONE="Europe/Bucharest"
ITP_REMINDER_DAYS=7
