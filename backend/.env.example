# Database (REQUIRED - change before use)
DATABASE_URL="postgresql://postgres:CHANGE_ME@localhost:5432/red_potato?schema=public"

# JWT (REQUIRED - generate a random secret)
# Generate with: openssl rand -base64 32
JWT_SECRET="CHANGE_ME_generate_with_openssl_rand_base64_32"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:5173"

# Twilio SMS (optional - SMS will be simulated if not set)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Email SMTP (optional - Email will be simulated if not set)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=""
EMAIL_PASSWORD=""
EMAIL_FROM="Service Auto <noreply@serviceauto.ro>"

# Cronjob Settings
CRON_ENABLED=true
CRON_TIMEZONE="Europe/Bucharest"
ITP_REMINDER_DAYS=7

# Seed script passwords (REQUIRED for seeding)
# Set these before running: npx prisma db seed
SEED_ADMIN_PASSWORD="CHANGE_ME_set_admin_password"
SEED_OPERATOR_PASSWORD="CHANGE_ME_set_operator_password"
